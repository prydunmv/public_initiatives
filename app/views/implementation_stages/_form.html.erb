  <%= form_with(model:[@initiative, @stage], local: true) do |form| %>
  <%= form.hidden_field :account_id, value: current_account.id %>
  <p><%= form.label 'назва етапу' %>
    <%= form.text_field :title %></p>
  <p><%= form.label 'опис етапу' %>
    <%= form.text_area :body %></p>
  <p><%= form.label 'дата створення' %>
    <%= form.date_select :start_date %></p>
  <p><%= form.label 'дата завершення' %>
    <%= form.date_select :end_date %></p>
  <div class="actions">
    <%= form.submit "опублікувати" %>
  </div>
<% end %>

