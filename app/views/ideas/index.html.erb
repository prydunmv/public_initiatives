  <table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Likes</th>
      <th scope="col">Dislikes</th>
      <th scope="col" colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
      <% @ideas.each do |idea| %>
        <tr>
          <td><%= idea.title %></td>
          <td><%= idea.get_likes.size %></td>
          <td><%= idea.get_dislikes.size %></td>
          <td><%= link_to 'Show', idea, class: 'btn btn-info' %></td>
          <td><%= link_to 'Edit', edit_idea_path(idea), class: 'btn btn-warning' %></td>
          <td><%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
  </tbody>
</table>

